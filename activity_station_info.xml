<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_staName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:hint="정류소 이름을 2글자이상 입력하세요"
            android:textSize="20dp"
            android:singleLine="true"/>
        <Button
            android:id="@+id/btn_sta_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:textSize="20dp"
            android:text="검색"
            android:gravity="center"
            android:background="#1E90FF"/>
    </LinearLayout>
    <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
        android:orientation="vertical">
        <ListView
            android:id="@+id/sta_ListView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"></ListView>
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/stationAd"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-7785923892668605/7461899651"
            android:layout_gravity="center"
            >
        </com.google.android.gms.ads.AdView>
    </LinearLayout>


</LinearLayout>